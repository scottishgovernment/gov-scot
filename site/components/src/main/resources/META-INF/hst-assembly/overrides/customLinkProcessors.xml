<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="org.hippoecm.hst.core.linking.HstLinkProcessor" class="org.hippoecm.hst.core.linking.HstLinkProcessorChain">
        <property name="processorsInChain">
            <list>
                <bean class="scot.gov.www.linkprocessors.NewsLinkProcessor" />
                <bean class="scot.gov.www.linkprocessors.SiteItemsLinkProcessor" />
                <bean class="scot.gov.www.linkprocessors.TopicLinkProcessor" />
                <bean class="scot.gov.www.linkprocessors.PublicationLinkProcessor" />
                <bean class="scot.gov.www.linkprocessors.TrailingSlashLinkProcessor" />
            </list>
        </property>
    </bean>

</beans>
