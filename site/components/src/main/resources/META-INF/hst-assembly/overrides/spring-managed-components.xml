<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
                           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.1.xsd">


    <context:component-scan
            base-package="scot.gov.publishing.hippo.funnelback.component" />

    <bean id="funnelbackSearchServiceDXP" class="scot.gov.publishing.hippo.funnelback.component.FunnelbackSearchService">
        <property name="collections">
            <map>
                <entry key="govscot" value="sp-govscot"/>
            </map>
        </property>

        <property name="resourceResolver" value="funnelbackDXP"/>

        <property name="tokenProperty" value="squiz.search.token"/>

        <property name="urlTemplate" value="/s/search.json?collection={clientId}~{collection}&amp;query={query}&amp;start_rank={rank}"/>

        <property name="suggestTemplate" value="/s/suggest.json?partial_query={partial_query}&amp;show={show}&amp;sort={sort}&amp;fmt={fmt}&amp;collection={clientId}~{collection}&amp;profile=search"/>
    </bean>

    <bean id="bloomreachSearchService" class="scot.gov.www.search.BloomreachSearchService">
    </bean>

    <bean id="threadFactory" class="scot.gov.publishing.hippo.funnelback.client.ThreadNamingThreadFactory">
        <property name="prefix" value="funnelback-ping-"/>
    </bean>

    <bean class="org.springframework.scheduling.concurrent.ScheduledExecutorFactoryBean">
    <property name="threadFactory" ref="threadFactory"/>
    <property name="scheduledExecutorTasks">
        <list>
            <bean class="org.springframework.scheduling.concurrent.ScheduledExecutorTask">
                <property name="period" value="25000"/>
                <property name="runnable">
                    <bean class="org.springframework.scheduling.support.MethodInvokingRunnable">
                        <property name="targetObject" ref="funnelbackSearchServiceDXP"/>
                        <property name="targetMethod" value="ping"/>
                        <property name="arguments" value="govscot" />
                    </bean>
                </property>
            </bean>
        </list>
    </property>
</bean>

</beans>
